extends layout

block content
  h1.headLine Sign Up!
  if errors
    ul
      for error in errors
        li!= error.msg
  form(action="/register" method="post")
    input(type="hidden", name="_csrf", value=csrfToken)
    label UserName
    input(type="text" name="userName")
    br
    label email
    input(type="email" name="email")
    br
    label password
    input(type="password" name="password")
    br
    button(type="submit") SubmitTheButton